{% extends 'base.html.twig' %}
{% block title %}Enviar ofertas{% endblock %}

{% block migas %}
    <ul class="breadcrumbs hidden-xs">
        <li><a href="inicio" class="bc-item bc-item-home">Inicio</a></li>
        <li><span class="bc-item">Enviar ofertas</span></li>
    </ul>
{% endblock %}

{% block body %}

{{ form_start(form) }}
    <div class="row grupos">
      Grupos:
        {% for curso in form.cursos %}
            <div class="col-md-2">
                {{ form_label(curso) }}
                {{ form_widget(curso) }}
            </div>

        {% endfor %}

    </div>



{{ form_end(form) }}
{% block javascript %}
<script src="{{asset('js/tinymce/tinymce.min.js')}}"></script>
<script>tinymce.init({selector: 'textarea', language:'es'});</script>
{% endblock %}
{% endblock %}
