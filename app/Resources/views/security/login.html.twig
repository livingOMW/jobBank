{% extends 'base.html.twig' %}
{% block title %}Iniciar sesión{% endblock %}

{% block migas %}
    <ul class="breadcrumbs hidden-xs">
        <li><a href="{{ path('login') }}" class="bc-item bc-item-home">Iniciar sesión</a></li>
    </ul>
{% endblock %}

{% block body %}

<form class="form-signin" action="{{ path('login') }}" method="POST">
     <h2 class="form-signin-heading">Iniciar sesión</h2>
    {% if error %}
        <div style="color: red;">{{ error.messageKey|replace(
                {"Invalid credentials.": "Usuario o contraseña no validos.",
                "Account is locked.": "Cuenta bloquedada. Revise su correo.",
                "Account is disabled.":"Cuenta está desactivada.",
                "Authentication request could not be processed due to a system problem.":
                "No se puede hacer login. Error del sistema."}
            ) }}</div>
    {% endif %}
     <label for="_username" class="sr-only">Email</label>
     <input type="text"
            id="_username"
            name="_username"
            class="form-control"
            placeholder="Correo electrónico"
            required
            autofocus
            value="{{ last_username }}"
     >
     <label for="_password" class="sr-only">Contraseña</label>
     <input type="password"
            id="_password"
            name="_password"
            class="form-control"
            placeholder="Contraseña"
            required
     >
     <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>

    <a href="{{ path('recuperarContrasenyaEmail') }}">¿Has olvidado la contraseña?</a>
 </form>


{% endblock %}
